<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:padding="0dp">

    <android.support.design.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/almostBlack"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/dialog_close_post_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/transparent"
                    android:rotation="45"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_icon_white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/dialog_generated_post_layout"
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:background="@color/greenmat">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/generated_post_image_view"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/generated_post_heading_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/productsans_bold"
                        android:text="Heading"
                        android:padding="20dp"
                        android:textSize="40sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/generated_post_content_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/productsans"
                        android:textColor="@color/black"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="This is some content man."
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/generated_post_byline_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/productsans"
                        android:textColor="@color/black"
                        android:padding="20dp"
                        android:text="By Line"
                        android:textSize="14sp"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/heading_font_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/productsans"
                        android:text="Heading:"
                        android:paddingEnd="20dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <SeekBar
                        android:id="@+id/heading_font_seekbar"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:min="1"
                        android:progress="40"
                        android:max="70"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/thumb"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/productsans"
                        android:text="Content:"
                        android:paddingEnd="20dp"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                    <SeekBar
                        android:id="@+id/content_font_seekbar"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/thumb"
                        android:min="1"
                        android:progress="20"
                        android:max="50"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<android.support.design.button.MaterialButton
                        android:id="@+id/dialog_save_button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Save"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp" />-->

                    <android.support.design.button.MaterialButton
                        android:id="@+id/dialog_share_button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/productsans"
                        android:padding="10dp"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:backgroundTint="@color/almostBlack"
                        app:strokeColor="@color/black"
                        app:strokeWidth="1dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.card.MaterialCardView>

</LinearLayout>