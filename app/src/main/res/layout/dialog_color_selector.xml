<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <android.support.design.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_color_chooser_preview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@color/greenmat" />

            <SeekBar
                android:id="@+id/dialog_color_picker_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:max="255"
                android:min="1"
                android:thumb="@drawable/thumb"
                android:thumbTint="@color/redMat" />

            <SeekBar
                android:id="@+id/dialog_color_picker_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:max="255"
                android:min="1"
                android:thumb="@drawable/thumb"
                android:thumbTint="@color/greenMat" />

            <SeekBar
                android:id="@+id/dialog_color_picker_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:max="255"
                android:min="1"
                android:thumb="@drawable/thumb"
                android:thumbTint="@color/blueMat" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.button.MaterialButton
                    android:id="@+id/dialog_cancel_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/productsans"
                    android:padding="10dp"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/dialog_apply_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/productsans"
                    android:padding="10dp"
                    android:text="@string/apply"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:backgroundTint="@color/almostBlack"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.design.card.MaterialCardView>
</LinearLayout>